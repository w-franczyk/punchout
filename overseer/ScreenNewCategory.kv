<ScreenNewCategory>:
  BoxLayout:
    orientation: 'vertical'

    BoxLayout:
      orientation: 'vertical'
      canvas:
        Color:
          rgb: 0.12, 0.12, 0.12
        Rectangle:
          size: self.size
          pos: self.pos
      spacing: 10
      padding: 10
      BoxLayout:
        orientation: 'horizontal'
        size_hint: 1, None
        height: 30
        Label:
          text: 'Name:'
          size_hint: 0.25, 1
        TextInput:
          id: txtName
      BoxLayout:
        orientation: 'horizontal'
        size_hint: 1, None
        height: 400
        Label:
          text: 'Color:'
          size_hint: 0.25, 1
        ColorPicker:
          id: cpColor
      Widget:

    # bottom
    StackLayout:
      spacing: 10
      padding: 10
      canvas:
        Color:
          rgb: 0.15, 0.15, 0.15
        Rectangle:
          size: self.size
          pos: self.pos
      height: 60
      size_hint: 1, None
      Button:
        height: 40
        width: 150
        size_hint: None, None
        text: "OK"
        on_release: root.btnOkAction()
      Button:
        height: 40
        width: 150
        size_hint: None, None
        text: "Back"
        on_release: root.btnBackAction()
