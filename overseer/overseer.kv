<TasksPanel>:
  BoxLayout:
    orientation: 'horizontal'

    # left panel
    BoxLayout:
      id: boxLeftPanel
      canvas:
        Color:
          rgb: 0.12, 0.12, 0.12
        Rectangle:
          size: self.size
          pos: self.pos
      orientation: 'vertical'
      width: 200
      size_hint: None, 1 
      spacing: 10
      padding: 10
      Button:
        id: btnNewCategory
        height: 40
        size_hint: 1, None
        text: "New category"
        on_release: root.manager.switch_to(root.manager.get_screen('screenAddCategory'))
      Button:
        id: btnNewTask
        height: 40
        size_hint: 1, None
        text: "New task"
      Button:
        id: btnExport 
        height: 40
        size_hint: 1, None
        text: "Export"
      Button:
        id: btnPrint
        height: 40
        size_hint: 1, None
        text: "Print selected"
      Widget:

    # content
    BoxLayout:
      canvas:
        Color:
          rgb: 0.09, 0.09, 0.09
        Rectangle:
          size: self.size
          pos: self.pos
      orientation: 'vertical'
      padding: 10
      TasksRecycleViewRow:
        height: 25
        size_hint: 1, None
        bgColor: 0.2, 0.2, 0.2, 1
        selectable: False
        dataId: 'ID'
        dataTitle: 'TITLE'
      TasksRecycleView:
        id: rvTasks
        viewclass: 'TasksRecycleViewRow'
        effect_cls: 'ScrollEffect'
        scroll_type: ['bars']
        bar_width: 10
        TasksRecycleViewLayout:
          default_size: None, 20
          default_size_hint: 1, None
          size_hint_y: None
          height: self.minimum_height
          orientation: 'vertical'
          multiselect: True
          touch_multiselect: True

<ColorLabel>:
  canvas.before:
    Color:
      rgb: root.bgColor
    Rectangle:
      size: self.size
      pos: self.pos

<TasksRecycleViewRow>:
  canvas.before:
    Color:
      rgba: (.0, 0.9, .1, .3) if self.selected else root.borderColor
    Rectangle:
      pos: self.pos
      size: self.size
  orientation: 'horizontal'
  spacing: 2
  padding: 2
  ColorLabel:
    size_hint: 0.3, 1
    text: root.dataId
    bgColor: root.bgColor
  ColorLabel:
    size_hint: 0.7, 1
    text: root.dataTitle 
    bgColor: root.bgColor
